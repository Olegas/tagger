{% block title %}Sequence{% endblock %}

{% block body %}
    <h1>Sequence</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ sequence.name }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
